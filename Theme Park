#include <iostream>
using namespace std;

int main()
{
    cout << "Enter your height in meters:" << endl;
    double h, age;
    cin >> h;
    
    cout << "Enter your age:" << endl;
    cin >> age;
    
    if (age >= 5 && h >= 0.6)
    {
        cout << "You can ride";
    }
    else if (age < 5 && h < 0.5)
    {
        cout << "Sorry you cannot ride";
    }
    else
    {
        cout << "Incorrect input";
    }
    return 0;
}
